{{!
    @template mod_stalloc/student_chairview

    Display the home site of this plugin.
    Classes required for JS:
    * none
    Data attributes required for JS:
    * none
    Context variables required for this template:
    * none
}}

{{#pending}}
    <div id="accordion">
        <form class="col-lg-12 col-sm-12" action="" method="post" >
            <div class="card ml-3">
                <div class="card-body">
                    <h2 class="mt-3 mb-3 ml-3">PENDING STUDENTS</h2>

                    <div class="table-responsive">
                        <table class="table border mb-0">
                            <thead class="bg-light">
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Name</th>
                                <th scope="col">ID-Number</th>
                                <th scope="col">E-Mail</th>
                                <th scope="col"></th>
                                <th scope="col"></th>
                            </tr>
                            </thead>
                            <tbody>
                            {{#pending_student}}
                                <tr>
                                    <th scope="row">{{index}}</th>
                                    <td>{{student_lastname}}, {{student_firstname}}</td>
                                    <td>{{student_number}}</td>
                                    <td>{{student_mail}}</td>
                                    <td>
                                        <button type="submit" name ="accept_{{student_id}}" class="btn btn-success" {{disable_pending}}>Accept</button>
                                    </td>
                                    <td>
                                        <button type="submit" name ="decline_{{student_id}}" class="btn btn-danger">Decline</button>
                                    </td>
                                </tr>
                            {{/pending_student}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <hr>
{{/pending}}


{{#allocated}}
    <div id="accordion" class="mt-5">
        <form class="col-lg-12 col-sm-12" action="" method="post" >
            <div class="card ml-3">
                <div class="card-body">
                    <h2 class="ml-3">ALLOCATED STUDENTS</h2>
                    <p class="mb-3 ml-3">You have {{direct_allocated_students}} directly allocated students.</p>

                    <table class="table border mb-0">
                        <thead class="bg-light">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Name</th>
                            <th scope="col">ID-Number</th>
                            <th scope="col">E-Mail</th>
                            <th scope="col">Thesis Name</th>
                            <th scope="col">2nd Examiner</th>
                            <th scope="col">Start Date</th>
                            <th scope="col">Edit</th>
                        </tr>
                        </thead>
                        <tbody>
                        {{#allocated_student}}
                            <tr>
                                <th scope="row">{{index}}</th>
                                <td>{{student_lastname}}, {{student_firstname}}</td>
                                <td>{{student_number}}</td>
                                <td>{{student_mail}}</td>
                                <td>{{student_thesis}}</td>
                                <td>{{student_examiner}}</td>
                                <td>{{student_start_date}}</td>
                                <td>
                                    {{#dont_edit_student}}
                                        {{#str}} icon_wrong, mod_stalloc {{/str}}
                                    {{/dont_edit_student}}

                                    {{#edit_student}}
                                        <a href="{{{edit_student_url}}}">{{#str}} icon_edit, mod_stalloc {{/str}}</a>
                                    {{/edit_student}}
                                </td>
                            </tr>
                        {{/allocated_student}}
                        </tbody>
                    </table>

                </div>
            </div>
        </form>
    </div>

{{/allocated}}

