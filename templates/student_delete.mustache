{{!
    @template mod_stalloc/student_delete

    Display the home site of this plugin.
    Classes required for JS:
    * none
    Data attributes required for JS:
    * none
    Context variables required for this template:
    * none
}}

<h2 class="mt-3 mb-3 ml-3">STUDENT DELETION</h2>

<div id="accordion" class="mb-3">
    <div class="card ml-3">
        <div class="card-body">
            <table class="table border mb-0">
                <thead class="bg-light">
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">ID-Number</th>
                    <th scope="col">E-Mail</th>
                    <th scope="col">Phone</th>
                </tr>
                </thead>
                <tbody>
                {{#student}}
                    <tr>
                        <td>{{student_lastname}}, {{student_firstname}}</td>
                        <td>{{student_number}}</td>
                        <td>{{student_mail}}</td>
                        <td>
                            {{#student_phone}}
                                {{#str}} icon_phone, mod_stalloc {{/str}} {{student_phone}}<br>
                            {{/student_phone}}
                            {{#student_mobile}}
                                {{#str}} icon_mobile, mod_stalloc {{/str}} {{student_mobile}}
                            {{/student_mobile}}
                        </td>
                    </tr>
                {{/student}}
                </tbody>
            </table>
        </div>
    </div>
</div>