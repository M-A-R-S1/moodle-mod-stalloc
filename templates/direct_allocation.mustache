{{!
    @template mod_stalloc/direct_allocation

    Display the home site of this plugin.
    Classes required for JS:
    * none
    Data attributes required for JS:
    * none
    Context variables required for this template:
    * none
}}


<div id="accordion">
    <div class="card-body">
        <div class="ml-3">
            <form class="col-lg-6 col-sm-12" action="" method="post" >

                {{#declined}}
                    <div class="alert alert-danger mb-5" role="alert">
                        You're direct allocation was rejected. If the chair has rejected you by mistake, please contact the chair!<br>
                        If you have no chair confirmation for your thesis yet, please select 'NO' from the dropdown menu and click the 'SUBMIT' Button!
                    </div>
                {{/declined}}

                <h2 class="mt-3 mb-3">Have you already received confirmation from a chair for your thesis?</h2>

                <div class="form-row mt-3 mb-5">
                    <div class="col-sm-3 col-xs-12 mb-3">
                        <label for="chair_select">Chair:</label>
                        <select id="chair_select" name="chair_select" class="form-control">
                            {{#chair}}
                                <option value="{{id}}">{{chair_name}}</option>
                            {{/chair}}
                        </select>
                    </div>
                </div>
                <button type="submit" name ="save_direct_allocation" class="btn btn-success">SUBMIT</button>
            </form>
        </div>
    </div>
</div>


