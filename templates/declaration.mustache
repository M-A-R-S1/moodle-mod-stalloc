{{!
    @template mod_stalloc/declaration

    Display the home site of this plugin.
    Classes required for JS:
    * none
    Data attributes required for JS:
    * none
    Context variables required for this template:
    * none
}}

{{#error_declaration_not_accepted}}
    <div class="alert alert-danger mb-5" role="alert">
        Warning! The Declaration was not Accepted! In order to proceed, you have to accept the declaration.
    </div>
{{/error_declaration_not_accepted}}

<div id="accordion">
    <div class="card-body">
        <div class="ml-3">
            <form class="col-lg-6 col-sm-12" action="" method="post" >

                <h2 class="mt-3 mb-3">Declaration</h2>
                <div class="card-image-style bg-light p-2 mb-3" style="outline: 0px solid transparent; height: auto; min-height: 150px;">
                    {{{delcaration_text}}}
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" value="" id="checkbox_declaration" name="checkbox_declaration">
                    <label class="form-check-label" for="checkbox_declaration">
                        I ({{student_name}}) accept
                    </label>
                </div>
                <button type="submit" name ="accept_declaration" class="btn btn-success">SUBMIT</button>
            </form>
        </div>
    </div>
</div>


