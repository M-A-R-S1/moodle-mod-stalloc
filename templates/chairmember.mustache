{{!
    @template mod_stalloc/chairmember

    Display the home site of this plugin.
    Classes required for JS:
    * none
    Data attributes required for JS:
    * none
    Context variables required for this template:
    * none
}}

<h2 class="mt-3 mb-3 ml-3">CHAIRMEMBERS</h2>

<div id="accordion">
    <div class="card ml-3">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover border mb-0">
                    <thead class="bg-dark text-light">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Chair</th>
                        <th scope="col">Edit</th>
                        <th scope="col">Delete</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#member}}
                        <tr>
                            <th scope="row">{{index}}</th>
                            <td>{{member_name}}</td>
                            <td>{{chair_name}}</td>
                            <td><a href="{{{edit_url}}}">{{#str}} icon_edit, mod_stalloc {{/str}}</a></td>
                            <td><a href="{{{delete_url}}}"> {{#str}} icon_delete, mod_stalloc {{/str}}</a></td>
                        </tr>
                    {{/member}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>