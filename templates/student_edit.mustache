{{!
    @template mod_stalloc/student_edit

    Display the home site of this plugin.
    Classes required for JS:
    * none
    Data attributes required for JS:
    * none
    Context variables required for this template:
    * none
}}

<h2 class="mt-3 mb-3 ml-3">EDIT STUDENT</h2>

{{#saved_student}}
    <div class="alert alert-success mb-5" role="alert">
        Student successfully saved!
    </div>
{{/saved_student}}

{{#error_thesis_empty}}
    <div class="alert alert-danger mb-5" role="alert">
        Error! Please provide a thesis name!
    </div>
{{/error_thesis_empty}}

{{#error_date_in_past}}
    <div class="alert alert-danger mb-5" role="alert">
        Error! The start date has to be in the future!
    </div>
{{/error_date_in_past}}

{{#error_date_empty}}
    <div class="alert alert-danger mb-5" role="alert">
        Error! Please provide a start date!
    </div>
{{/error_date_empty}}

{{#error_examiner_overlap}}
    <div class="alert alert-danger mb-5" role="alert">
        Error! The Examiners must be unique! Examiner 1 and Examiner 2 can't be the same person!
    </div>
{{/error_examiner_overlap}}


<div id="accordion">
    <div class="card ml-3">
        <div class="card-body">
            <div class="ml-3">
                <form class="col-lg-6 col-sm-12" action="" method="post" >
                    <div class="form-group">
                        <label for="thesis_name">Thesis Name</label>
                        <input type="text" class="form-control" name="thesis_name" id="thesis_name" value="{{thesis_name}}">
                    </div>
                    <div class="form-group">
                        <label for="start_date">Start-Date</label>
                        <input type="date" class="form-control" name="start_date" id="start_date" value="{{start_date}}">
                    </div>
                    <div class="form-group">
                        <label for="examiner_1">1. Examiner</label>
                        <select id="examiner_1" name="examiner_1" class="form-control">
                            {{#examiners}}
                                <option {{examiner_selected_1}} value="{{examiner_id}}">{{examiner_lastname}}, {{examiner_firstname}}</option>
                            {{/examiners}}
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="examiner_2">2. Examiner</label>
                        <select id="examiner_2" name="examiner_2" class="form-control">
                            <option {{examiner_none}} value="-1">None</option>
                            {{#examiners}}
                                <option {{examiner_selected_2}} value="{{examiner_id}}">{{examiner_lastname}}, {{examiner_firstname}}</option>
                            {{/examiners}}
                        </select>
                    </div>
                    <button type="submit" name ="save_student" class="btn btn-success">{{#str}} icon_save, mod_stalloc {{/str}} SAVE</button>
                    <a href="{{{back_link}}}" type="button" class="btn btn-secondary">BACK</a>
                </form>
            </div>
        </div>
    </div>
</div>